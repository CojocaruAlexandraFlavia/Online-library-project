@using Proiect_DAW2.Models
@{
    ViewBag.Title = "Index";
}

<h1>@ViewBag.Message</h1>

<br /><br /><br /><br />

<div class="continut" style="display:block;padding-bottom:0">
    <div class="row" style="column-count:3; margin-left:5%">
        @foreach (var author in ViewBag.Authors)
        {
            <div class="col-md-12" style="break-inside:avoid-column">
                <div style="width:60%;font-size:100%; margin-right:10%; display:flex">
                    <i class="glyphicon glyphicon-play"></i>
                    &nbsp;
                    <a href="/Authors/Show/@author.AuthorId">@author.FirstName @author.LastName</a>
                </div>
            </div>
    
        <br /> <br />

        }
    </div>



    <br /> <br /> <br /><br /><br>
</div>
<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/Authors/Index?page=1" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li><a href="/Authors/Index?page=@i">@(i)</a></li>
            }

            <li>
                <a href="/Authors/Index?page=@(ViewBag.lastPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
<br /><br />

<footer>
    <p>&copy; @DateTime.Now.Year FLAVIA SI MARIA </p>
</footer>